{
    "tasks": [
        {
            "type": "shell",
            "label": "mkdir -p bin",
            "command": "mkdir -p bin",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            // press F5
            "type": "cppbuild",
            "label": "C/C++: g++-9 build active file (debug)",
            "command": "/usr/bin/g++-9",
            "args": [
                "-std=gnu++17",
                "-Wall",
                "-Wextra",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I",
                "${workspaceFolder}/include/",
                "-o",
                "${workspaceFolder}/bin/debug/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "mkdir -p bin"
            ],
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file (release)",
            "command": "/usr/bin/g++",
            "args": [
                "-std=gnu++17",
                "-Wall",
                "-Wextra",
                "-g",
                "-O2",
                "-fdiagnostics-color=always",
                "${file}",
                "-I",
                "${workspaceFolder}/include/",
                "-o",
                "${workspaceFolder}/bin/release/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "dependsOn": [
                "mkdir -p bin"
            ],
            "detail": "Task generated by Debugger."
        },
        {
            // Ctrl + F5
            "type": "shell",
            "label": "C/C++: g++ run active file (release)",
            "command": "bin/release/${fileBasenameNoExtension}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test"
            },
            "dependsOn": [
                "C/C++: g++ build active file (release)"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}